<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="Templating" basedir="." default="compile">

	<property name="my.debug" value="true"/>
	<property name="ant.build.javac.source" value="1.5"/>
	<property name="ant.build.javac.target" value="1.5"/>
	<property name="src.dir" value="src"/>
	<property name="dst.dir" value="build"/>
	<property name="pub.dir" value="pub"/>
	
	<target name="init" description="Initializing">
		<mkdir dir="${dst.dir}"/>
	</target>

	<target name="compile" description="Compiling" depends="init">
		<javac srcdir="${src.dir}" destdir="${dst.dir}" deprecation="true" debug="${my.debug}">
			<compilerarg value="-Xlint:unchecked"/>
		</javac>
		<copy todir="${dst.dir}">
			<fileset dir="${src.dir}">
			      <exclude name="**/*.java"/>
			      <exclude name="**/package.html"/>
			</fileset>
		</copy>
	</target>

	<target name="jar" description="Building JAR file" depends="compile">
		<mkdir dir="${pub.dir}"/>
		<jar destfile="${pub.dir}/templating.jar">
			<fileset dir="${dst.dir}">		
				<include name="**/*"/>
			</fileset>
		</jar>
	</target>
	
	<target name="javadoc" description="Creating JavaDoc" depends="compile">
		<mkdir dir="${pub.dir}/doc/api"/>
		<javadoc 
			packagenames="templating.*"
			sourcepath="${src.dir}" 
			classpath="${dst.dir}" 
			destdir="${pub.dir}/doc/api"
			author="true"
			version="true"
			use="true"
			windowtitle="Templating/1.0 Java API"
		>
			<doctitle><![CDATA[<h1>Templating - Utilities for text replacements</h1>]]></doctitle>
			<bottom><![CDATA[<i>Copyright &#169; 2009 Ralph Schuster. All Rights Reserved.</i>]]></bottom>
		</javadoc>
	</target>
	
	<target name="clean" description="Cleaning build directory" depends="init">
		<delete dir="${pub.dir}"/>
		<delete dir="${dst.dir}"/>
	</target>
	
	<target name="publish" description="Publishing Templating" depends="jar,javadoc">
		<mkdir dir="${pub.dir}/src"/>
		<copy todir="${pub.dir}/src">
			<fileset dir="${src.dir}">
			      <exclude name="**/*.class"/>
			</fileset>
		</copy>
		<copy todir="${pub.dir}">
			<fileset dir=".">
				<include name="gpl.txt"/>
				<include name="lgpl.txt"/>
				<include name="build.xml"/>
			</fileset>
		</copy>
	</target>
</project>